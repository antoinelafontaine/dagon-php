;;;;;;;;;;;;;;;;;;;;;
; FPM Configuration ;
;;;;;;;;;;;;;;;;;;;;;

[{{ version_package }}]
listen = /usr/local/etc/php/sockets/{{ version_package }}
listen.mode = 0666

pm = dynamic
pm.max_children = 10
pm.start_servers = 3
pm.min_spare_servers = 2
pm.max_spare_servers = 5

php_admin_flag[log_errors] = on
php_admin_value[memory_limit] = {{ fpm_php_memory_limit }}